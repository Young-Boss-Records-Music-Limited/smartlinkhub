<div class="container-fluid mt--4">
  <!-- Table -->
  <div class="row">
    <div class="col">
      <div class="card shadow">
        <div class="card-header border-0">
          <h3>Songs</h3>
          <input type="hidden" id="uid" name="uid" value={{{uid}}} />
          <div class="progress green" id="bar" style="visibility:hidden">
            <div id="progressbar" class="progress-bar progress-bar-striped progress-bar-animated bg-success" value="0"
              max="100" style="width:100%">
            </div>
          </div>
        </div>
        <div class="table-responsive">


          <form id="albumform" class="container" method="post" enctype="multipart/form-data">
            <div class="form-group">
              <input type="text" class="form-control" id="albumname" placeholder="Enter Album Name">
            </div>
            <div class="custom-file mb-3">
              <input type="file" class="custom-file-input" id="file1" name='file1' accept="image/*">
              <label class="custom-file-label" for="customFile">Choose File Image</label>
            </div>
            <table class="table align-items-center table-flush " id="song_tab">
              <thead class="thead-light">
                <tr>
                  <th scope="col">Song Title</th>
                  <th scope="col">Artist</th>
                  {{!-- <th scope="col">Times Played</th>
                                <th scope="col">ReleaseDate</th> --}}
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>

                {{#each SongList}}
                <tr>
                  <th scope="row">
                    <div class="media align-items-center">
                      <div class="media-body">
                        <span class="mb-0 text-sm">{{fileName}}</span>
                      </div>
                    </div>
                  </th>
                  {{!-- <td>
                  <div class="media-body">
                    <span class="mb-0 text-sm"> {{avatar}}</span>
                  </div>
                </td> --}}
                  <td>
                    <div class="media-body">
                      <span class="mb-0 text-sm"> {{artist}}</span>
                    </div>
                  </td>
                  {{!-- <td>
                                    <div class="media-body">
                                        <span class="mb-0 text-sm"> {{timesPlayed}} </span>
                                    </div>
                                </td>
                                <td>
                                    <div class="media-body">
                                        <span class="mb-0 text-sm"> {{ReleaseDate}} </span>
                                    </div>
                                </td> --}}
                  <td>
                    <input type="checkbox" name="song" value={{{_id}}}>
                    <label>Add to Album</label>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
            <div class="col-md-12">
              <button type="button" class="btn btn-success btn-block">Submit</button>
            </div>
          </form>
        </div>
